import org.jenkinsci.plugins.pipeline.modeldefinition.Utils

def when(condition, Closure body) {
    if (condition) {
        body()
    } else {
        Utils.markStageSkippedForConditional(STAGE_NAME)
    }
}

parallel([
    "A": {
        stage("1") {
            when(false) {
                echo("A-1")
            }
        }
    },
    "B": {
        stage("1") {
            when(false) {
                echo("B-1")
            }
        }
    }
])